# ================================
# Variables de Entorno - Ejemplo
# ================================

# Puerto del servidor
PORT=3001

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kanban_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT (legacy - para compatibilidad)
JWT_SECRET=your_jwt_secret_here

# Configuración de Keycloak
KEYCLOAK_BASE_URL=https://aplicaciones.osmos.es:4444
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=trello-app

# Directorio de uploads
UPLOAD_DIR=uploads

# Entorno
NODE_ENV=development

# ================================
# INSTRUCCIONES:
# ================================
# 1. Copia este archivo como .env
# 2. Actualiza los valores según tu configuración
# 3. NUNCA commitees el archivo .env al repositorio
# ================================